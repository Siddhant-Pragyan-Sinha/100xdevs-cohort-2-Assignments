generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String
  email String @unique
  password String
  posts Posts[]
}

model Posts {
  id Int @id @default(autoincrement())
  title String
  body String
  tags Tags[]
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  createdAt DateTime @default(now())
}

model Tags {
  id Int @id @default(autoincrement())
  tag String @unique
  post Posts[]
}
